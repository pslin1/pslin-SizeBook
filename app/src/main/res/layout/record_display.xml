<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Name: " />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:layout_toRightOf="@id/name"/>

    <TextView
        android:id="@+id/neck"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Neck: " />

    <EditText
        android:id="@+id/neck_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/bust"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bust: " />

    <EditText
        android:id="@+id/bust_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/chest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bust: " />

    <EditText
        android:id="@+id/chest_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/waist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Waist: " />

    <EditText
        android:id="@+id/waist_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/hip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hip: " />

    <EditText
        android:id="@+id/hip_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/inseam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Inseam: " />

    <EditText
        android:id="@+id/inseam_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Comments: " />

    <EditText
        android:id="@+id/comment_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" />

    <Button
        android:id="@+id/save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Save" />
</LinearLayout>